<Page
    x:Class="MQClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MQClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="140" Margin="10,10,0,0" VerticalAlignment="Top" Width="735" Background="#FFE2E7EC" BorderThickness="2">
            <Button x:ConnectionId='7' x:Name="btnRegister" Content="註冊" HorizontalAlignment="Left" Margin="37,21,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="41" Width="111"                          />
            <TextBox x:ConnectionId='8' x:Name="txtMessage" HorizontalAlignment="Left" Margin="153,21,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Width="532" Height="41"/>
            <Button x:ConnectionId='9' x:Name="btnSub" Content="訂閱" HorizontalAlignment="Left" Margin="37,80,0,0" VerticalAlignment="Top" FontSize="18" Width="111" FontWeight="Bold"                     />
        </Grid>
        <Grid Margin="10,155,10,178">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <TextBlock x:ConnectionId='4' x:Name="txReveive" HorizontalAlignment="Left" Height="42" Margin="0,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="603" FontSize="20" FontWeight="Bold" Foreground="#FFF2F1F6" FocusVisualPrimaryBrush="#FFF70E67"/>
            <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="客廳燈光狀態" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="#FFF71616"/>
            <Image x:ConnectionId='6' x:Name="imgLight" HorizontalAlignment="Left" Height="89" Margin="621,0,0,0" VerticalAlignment="Top" Width="127" Source="photos/dark.png" Stretch="Fill" RenderTransformOrigin="1.135,0.407"/>

        </Grid>
        <Grid Margin="10,279,10,54">
            <Grid.FocusVisualPrimaryBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.FocusVisualPrimaryBrush>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.005"/>
                    <GradientStop Color="#FF72C3F5" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <TextBlock x:ConnectionId='1' x:Name="txtBedReceive" HorizontalAlignment="Left" Height="42" Margin="0,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="603" FontSize="20" FontWeight="Bold" Foreground="#FFEFEEF3" FocusVisualPrimaryBrush="#FFF70E67"/>
            <TextBlock x:ConnectionId='2' x:Name="textBlock1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="房間燈光狀態" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="#FFF71616"/>
            <Image x:ConnectionId='3' x:Name="imgBed" HorizontalAlignment="Left" Height="89" Margin="621,0,0,0" VerticalAlignment="Top" Width="127" Source="photos/dark.png" Stretch="Fill" RenderTransformOrigin="1.135,0.407"/>

        </Grid>

    </Grid>
</Page>

